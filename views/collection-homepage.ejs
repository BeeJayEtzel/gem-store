<div class="container">
    <% for (var i = 0; i < collection.gems.length; i++) { %>
        <div class="gem">
            <p class="gem-heading"><a href="/store/<%= collection.id %>/<%= collection.gems[i].id %>"><%= collection.gems[i].name %></a></p>
            <div class="img-container">
                <img src="<%= collection.gems[i].picture %>" alt="" width="350px" height="200px">
                <% if (collection.gems[i].onhand == 0) { %>
                    <div class="img-text">
                        <h2>Sold Out!</h2>
                    </div>
                <% } %>
            </div>
            <p class="description"><%= collection.gems[i].description %></p>
            <br>
            <p>$<%= collection.gems[i].price %></p>
            <form action="/buyGem" method="post">
                <input type="hidden" name="id" value="<%= collection.gems[i].id %>">
                <% if (collection.gems[i].onhand >= 1) { %>
                    <input type="submit" name="buy" value="Buy Now">
                <% } else { %>
                    <input type="submit" name="buy" value="Sold Out" disabled>
                <% } %>
                <input type="submit" name="sell" value="Sell Now">
            </form>
            <hr>
        </div>
    <% } %> 
</div>